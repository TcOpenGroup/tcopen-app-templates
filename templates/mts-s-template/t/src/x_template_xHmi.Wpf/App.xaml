             xmlns:wpf="clr-namespace:TcoCore.Wpf;assembly=TcOpen.Inxton.TcoCore.Wpf" xmlns:styles="clr-namespace:x_template_xHmi.Wpf.Wpf.Styles"
             ShutdownMode="OnMainWindowClose"  
            
             StartupUri="MainWindow.xaml">
