<AuthorizeView>
    <Authorized>
        <div class="expandable @expandedLogin">
            <a class="auth-link" @onclick='() => expandedLogin = expandedLogin == "" ? "expanded" : ""'>
                <svg width="16" height="16" fill="currentColor" class="bi bi-person" viewBox="0 0 16 16">
                    <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z" />
                </svg>
                @context.User.Identity.Name
            </a>
            <ul class="dropdown">
                <li>
                    <a href="Identity/Account/Manage" style="margin-left: 0;">Profile</a>
                </li>
                <li>
                    <a href="Identity/Account/Logout" style="margin-left: 0;">Log out</a>
                    @*<form method="post" action="Identity/Account/Logout">
                        <button type="submit">Log out</button>
                    </form>*@
                </li>
            </ul>
        </div>
    </Authorized>

    <NotAuthorized>
        <a href="Identity/Account/Login" class="nauth-link">Log in</a>
    </NotAuthorized>
</AuthorizeView>

@code {
    private string expandedLogin = "";
}
